@{
    ViewBag.Title = "Thống kê đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src='https://momentjs.com/downloads/moment.js'></script>

<script>
    function GetAliasDetails() {
        var text = $('#sanpham').val();
        if (text != '') {
            $("#divLoader").show();
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: "@Url.Action("SearchByName", "Search")",
                data: "{term:'" + text + "'}",
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                        var html = "<div style=\"border:3px solid #c6c6c6;background-color: #fff;\">";
                        html += "<table>";
                        $.each(data, function (i, item) {
                            html += "<tbody class=\"hoversearch\"  onclick=\"updategiatri(\'" + item.MaSP + "\')\"><tr>";
                            html += "<td style=\"padding:5px\" rowspan=\"2\"><img width=\"50\" height=\"50\" src=\"@Url.Content("~/images/products/")" + item.AnhDaiDien + "\" /></td>";
                            html += "<td style=\"padding:5px\"><span class=\"bold\">" + item.TenSP + "</span></td></tr>";
                            html += "<tr><td style=\"padding:5px\"><span style=\"color:#2A1051\" class=\"bold\">" + item.GiaTien.toLocaleString() + " VNĐ</span></td></tr>";
                            html += "</tbody>";
                        })
                        html += "</table></div>";
                        $("#divAutoComplete").html(html).show(500);
                    }
                },
                error: function (result) {
                    $("#divLoader").hide();
                }
            });
        }
        else {
            close();
        }
    }


    function close() {
        $("#divAutoComplete").html('');
        $("#divAutoComplete").slideUp(1000);
        $("#divLoader").hide();
    }

    function updategiatri(val) {
        $('#sanpham').val(val);
        $("#divAutoComplete").hide(500);
    }
</script>
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>Thống kê theo sản phẩm</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="alert alert-info" id="alert-info" style="display:none"></div>
                <div class="form-inline" style="text-align: right; padding: 10px">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="sanpham" type="text" class="form-control" placeholder="Tên sản phẩm" oninput="GetAliasDetails()">
                        <div id="divAutoComplete" style="position:absolute; z-index:100; padding-top: 10px; top:30px"></div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="red">Từ ngày</i></span>
                        <input id="fdayDH" type="date" class="form-control" onchange="thongketheodhnew()">
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="red">Đến ngày</i></span>
                        <input id="tdayDH" type="date" class="form-control" onchange="thongketheodhnew()">
                    </div>
                </div>
                <div>
                    <div id="chart2" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                </div>
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
<script>
    var options = {
        series: [
            {
                name: "Số lượng sản phẩm: ",
                data: []
            }
        ],
        chart: {
          height: 350,
          type: 'line',
          zoom: {
            enabled: false
          }
          
        },
        dataLabels: {
          enabled: false
        },
     
        stroke: {
          curve: 'straight'
        },
       
        grid: {
          row: {
            colors: ['#f3f3f3', 'transparent'], 
            opacity: 0.5
          },
        },
       
        xaxis: {
          categories: [],
        }
    };
    
    var chartLine = new ApexCharts(document.querySelector("#chart2"),options);
    chartLine.render();
    
    $(document).ready(function () {
      
        thongketheodhnew()
    });
    function thongketheodhnew() {
    var froms = !$('#fday').val() ? moment().startOf('month').format('YYYY-MM-DD') : $('#fday').val();
    var tos = !$('#tday').val() ? moment().endOf('month').format('YYYY-MM-DD') : $('#tday').val();
    $.ajax({
        url: "/ThongKe/ThongKeDonHangS",
        type: 'GET',
        data: { froms: froms, tos: tos },
        success: function (data) {

            var Names = []
            var Qts = []
           for (var i = 0; i < data.length; i++) {

               Names.push(data[i].TenSP);
                Qts.push(data[i].SL);
            }
         
           
            chartLine.updateSeries([{
                name: 'Số lượng sản phẩm: ',
                data: Qts
            }])
           
            chartLine.updateOptions({
                xaxis: {
                     categories:[...Names],
                }
            })
           
        },
    });
}
</script>