<script type="text/javascript">
    $(document).ready(function () {
        $('.xoaClick').trigger('click');

        $("#btnPayPopup").click(function () {

            if ($("#buyer").val() == "") {
                swal("Lỗi!", "Tên người mua không được để trống!", "error");
            } else if ($("#seller").val() == "") {
                swal("Lỗi!", "Tên người nhận không được để trống!", "error");
            } else if ($("#phoneNumber").val() == "") {
                swal("Lỗi!", "Số điện thoại không được để trống!", "error");
            } else if ($("#address").val() == "") {
                swal("Lỗi!", "Địa chỉ không được để trống!", "error");
            } else
            {

                var khachHang = {
                    "buyer": $("#buyer").val(),
                    "seller": $("#seller").val(),
                    "phoneNumber": $("#phoneNumber").val(),
                    "address": $("#address").val(),
                    "Note": $("#Note").val()
                };

                localStorage.setItem("khachHang", JSON.stringify(khachHang));
                var money = $('#total-field li div.value').text().split(" ")[0];
                $("#Amount").val(money.replace(",", ""));
                var postData = $("#form1").serialize();
                var submitUrl = '/Home/GetUrl';
                $.ajax({
                    type: "GET",
                    url: submitUrl,
                    data: postData,
                    dataType: 'JSON',
                    success: function (x) {
                        if (x.code === '00') {
                            if (window.vnpay) {
                                vnpay.open({ width: 480, height: 600, url: x.data });
                            } else {
                                location.href = x.data;
                            }
                            return false;
                        } else {
                            alert(x.Message);
                        }
                    }
                });
                return false;
            }
        })
    });
</script>